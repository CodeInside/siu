<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet author="CodeInside" id="1.12">

        <addColumn tableName="employee">
            <column name="attempts" type="integer"/>
            <column name="unlocktime" type="timestamp without time zone"/>
        </addColumn>

        <createTable tableName="locked_certs">
            <column name="employee_login" type="VARCHAR(255)" />
            <column name="cert_id" type="bigint" />
            <column name="attempts" type="integer"/>
            <column name="unlock_time" type="timestamp without time zone" />
        </createTable>
        <addPrimaryKey columnNames="employee_login, cert_id" constraintName="locked_certs_pkey" tableName="locked_certs"/>
        <addForeignKeyConstraint baseColumnNames="employee_login" baseTableName="locked_certs"
                                 baseTableSchemaName="public" constraintName="fk_locked_certs_employee_login"
                                 deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="login" referencedTableName="employee"
                                 referencedTableSchemaName="public" referencesUniqueColumn="false"/>

    </changeSet>
</databaseChangeLog>
